.container{style: 'min-height: 600px'}
  .row
    .col-lg-6.col-lg-offset-3
      %h2 Forgot your password?
      = bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
        = devise_error_messages!
        = f.email_field :email, autofocus: true, class: 'input-lg'
        = f.submit "Send me reset password instructions", class: 'btn btn-lg btn-block btn-primary'
      %br
      %br
      = render "devise/shared/links"
