#_manual.step
  %p=raw translate("reporting.manual.prompt")
  %form#addressForm
    %p
      %label
        %b=translate("reporting.manual.location")
      =text_field_tag :locationName, "", placeholder: translate("reporting.manual.locationPrompt")
    %p
      %label
        %b=translate("reporting.manual.address")
      =text_field_tag :address, "", placeholder: translate("reporting.manual.addressPrompt")
    %a.baseBtn.primaryBtn#manualEntryBtn{href: "javascript:;"}
      =translate("reporting.manual.continue")

  .orLine
    %hr
    .orText.center
      %span Or

  .center
    =link_to translate("reporting.manual.look_up"), "#findForAddress"
